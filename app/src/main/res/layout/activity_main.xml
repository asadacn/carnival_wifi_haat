<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E88E5"
    android:backgroundTint="#E0F7FA"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/buttonNagordola"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#FDD835"

        android:contentDescription="nagordolaButton"
        android:elevation="5dp"
        android:fadingEdgeLength="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102"
        app:srcCompat="@drawable/nagordola_logo"
        app:tint="#D81B60" />

    <ImageButton
        android:id="@+id/buttonTv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#FDD835"
        android:contentDescription="tvButton"
        android:elevation="5dp"
        android:fadingEdgeLength="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391"
        app:srcCompat="@drawable/livetv" />

    <ImageButton
        android:id="@+id/buttonHaat"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#FDD835"
        android:contentDescription="HaatButton"
        android:elevation="5dp"
        android:fadingEdgeLength="20dp"
        android:src="@drawable/haat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715"
        tools:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/check_Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:text="Check Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHaat" />

</androidx.constraintlayout.widget.ConstraintLayout>