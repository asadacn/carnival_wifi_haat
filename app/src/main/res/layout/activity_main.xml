<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E88E5"
    android:backgroundTint="#E0F7FA"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/buttonNagordola"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="232dp"
        android:layout_height="119dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FDD835"
        android:contentDescription="nagordolaButton"
        android:elevation="8dp"
        android:fadingEdgeLength="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/nagordola_logo"
        app:tint="#D81B60" />

    <ImageButton
        android:id="@+id/buttonTv"
        android:layout_width="229dp"
        android:layout_height="121dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#FDD835"
        android:contentDescription="tvButton"
        android:elevation="8dp"
        android:fadingEdgeLength="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNagordola"
        app:srcCompat="@drawable/rsz_11rsz_tv_logo" />

    <ImageButton
        android:id="@+id/buttonHaat"
        android:layout_width="226dp"
        android:layout_height="131dp"
        android:backgroundTint="#FDD835"
        android:contentDescription="HaatButton"
        android:elevation="8dp"
        android:fadingEdgeLength="20dp"
        android:src="@drawable/haat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTv"
        app:layout_constraintVertical_bias="0.22"
        tools:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="259dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:background="#FFEB3B"
        android:text="HOTLINE: 01770033448"
        android:textAlignment="center"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>